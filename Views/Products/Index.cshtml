@model IEnumerable<SportProduct.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4 sm:p-6 lg:p-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-800">@ViewData["Title"]</h1>
            <a asp-action="Create" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                Tạo sản phẩm mới
            </a>
        </div>

        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tên sản phẩm</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phân loại</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Giá</th>
                        <th scope="col" class="relative px-6 py-3"><span class="sr-only">Hành động</span></th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10">
                                        <img class="h-10 w-10 rounded-full object-cover" src="@item.ImagePro" alt="" onerror="this.onerror=null;this.src='https://placehold.co/40x40/e2e8f0/4a5568?text=Ảnh';">
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">@Html.DisplayFor(modelItem => item.NamePro)</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@Html.DisplayFor(modelItem => item.Category)</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@item.Price?.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                                <a asp-action="Edit" asp-route-id="@item.ProductId" class="text-indigo-600 hover:text-indigo-900">Sửa</a>
                                <a asp-action="Details" asp-route-id="@item.ProductId" class="text-gray-600 hover:text-gray-900">Chi tiết</a>
                                <a asp-action="Delete" asp-route-id="@item.ProductId" class="text-red-600 hover:text-red-900">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
