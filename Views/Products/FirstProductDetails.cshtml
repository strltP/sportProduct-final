@* This view is strongly typed to the Product model *@
@model SportProduct.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm đầu tiên";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- Tailwind CSS for styling -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100">

    <div class="container mx-auto p-4 sm:p-6 lg:p-8">
        <div class="bg-white shadow-lg rounded-lg overflow-hidden max-w-4xl mx-auto">
            <div class="p-6 border-b">
                <div class="flex justify-between items-center">
                    <h1 class="text-3xl font-bold text-gray-800">Chi tiết sản phẩm</h1>
                    @* --- them nut edit --- *@
                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@Model.ProductId"
                       class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z" />
                            <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
                        </svg>
                        Chỉnh sửa
                    </a>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-0">
                <!-- Product Image Section -->
                <div class="p-6 flex items-center justify-center bg-gray-50">
                    <img src="@Model.ImagePro"
                         alt="Hình ảnh của @Model.NamePro"
                         class="max-w-full h-auto rounded-lg shadow-md object-cover"
                         onerror="this.onerror=null;this.src='https://placehold.co/400x400/e2e8f0/4a5568?text=Ảnh+Lỗi';" />
                </div>

                <!-- Product Details Section -->
                <div class="p-8">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">@Model.NamePro</h2>

                    <p class="text-gray-700 mb-6">
                        @Model.DecriptionPro
                    </p>

                    <dl class="space-y-4">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Mã sản phẩm</dt>
                            <dd class="mt-1 text-lg text-gray-900">#@Model.ProductId.ToString("D4")</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Phân loại</dt>
                            <dd class="mt-1 text-lg text-gray-900">@Model.Category</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Ngày sản xuất</dt>
                            <dd class="mt-1 text-lg text-gray-900">@Model.ManufacturingDate.ToString("dd/MM/yyyy")</dd>
                        </div>
                    </dl>

                    <!-- Price -->
                    <div class="mt-8">
                        <p class="text-4xl font-extrabold text-indigo-600">
                            @Model.Price?.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
